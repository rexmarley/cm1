{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
	<div id="register" class="login">
		{{ form_start(form, {"attr": {"class": "fos_user_registration_register"}}) }}
	        <div class="row">
			    <div class="col-md-12">
			    	<center><span><u>Registration</u></span></center>
				</div>
			</div>
			<div class="row">
			    <div class="col-md-11 col-md-offset-1">
			    	{{ form_errors(form.username) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-3 col-xs-2">
			    	{{ form_label(form.username) }}
				</div>
			    <div class="col-md-9">
		    		{{ form_widget(form.username) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-11 col-md-offset-1">
			    	{{ form_errors(form.email) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-3 col-xs-2">
			    	{{ form_label(form.email) }}
				</div>
			    <div class="col-md-9">
		    		{{ form_widget(form.email) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-11 col-md-offset-1">
			    	{{ form_errors(form.plainPassword.first) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-3 col-xs-2">
			    	{{ form_label(form.plainPassword.first) }}
				</div>
			    <div class="col-md-9">
		    		{{ form_widget(form.plainPassword.first) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-3 col-xs-2">
			    	{{ form_label(form.plainPassword.second) }}
				</div>
			    <div class="col-md-9">
		    		{{ form_widget(form.plainPassword.second) }}
				</div>
			</div>
			<div class="row">
			    <div class="col-md-12">
		        	<center><input class="btn btn-lg btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" /></center>
				</div>
			</div>
		    {{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
