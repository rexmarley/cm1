{% if player == 'b' %}
	{% set topRow = 1 %}
	{% set bottomRow = 8 %}
	{% set leftCol = 'h' %}
	{% set rightCol = 'a' %}
	{% set alt = 1 %}
{% else %}
	{% set topRow = 8 %}
	{% set bottomRow = 1 %}
	{% set leftCol = 'a' %}
	{% set rightCol = 'h' %}
	{% set alt = 0 %}
{% endif %}
<div id ="game_{{ player }}_{{ gameID }}" class="board">
	{% for i in topRow..bottomRow  %}
		{% for j in leftCol..rightCol  %}
			{% if (i+alt) is divisibleby(2) %}
				{% if loop.index is divisibleby(2) %}
					{% set  squareColour = 'dark' %}
				{% else %}
					{% set  squareColour = 'light' %}
				{% endif %}
			{% else %}
				{% if loop.index is divisibleby(2) %}
					{% set  squareColour = 'light' %}
				{% else %}
					{% set  squareColour = 'dark' %}
				{% endif %}	
			{% endif %}		
			<div id="{{j}}_{{i}}" class="square {{ squareColour }} ui-droppable clipped">
				{% if pieces[i-1][loop.index-1] %}
					<div id="{{ pieces[i-1][loop.index-1].id }}" class="piece ui-draggable">{{ pieces[i-1][loop.index-1].img | raw }}</div>
				{% endif %}
			</div>
		{% endfor %}
	{% endfor %}
</div>
<div id="choosePiece_b" class="ui-dialog" title="Choose Piece">
	<div id="pick_b_queen" class="piece choosablePiece">&#9819;</div>
	<div id="pick_b_rook" class="piece choosablePiece">&#9820;</div>
	<div id="pick_b_bishop" class="piece choosablePiece">&#9821;</div>
	<div id="pick_b_knight" class="piece choosablePiece">&#9822;</div>
</div>
<div id="choosePiece_w" class="ui-dialog" title="Choose Piece">
	<div id="pick_w_queen" class="piece choosablePiece">&#9813;</div>
	<div id="pick_w_rook" class="piece choosablePiece">&#9814;</div>
	<div id="pick_w_bishop" class="piece choosablePiece">&#9815;</div>
	<div id="pick_w_knight" class="piece choosablePiece">&#9816;</div>
</div>