<form action="{{ path('cm_new_game', {})}}" method="POST">
	<div id="newGameOptions">
		<div class="row">
			<div class="col-md-5 col-md-offset-4 col-sm-5 col-sm-offset-4 col-xs-5 col-xs-offset-4">
				<center><h1><u>Start Game</u></h1></center>
			</div>
		</div>
		<div class="row">
			<div class="col-md-11 col-md-offset-1 col-sm-11 col-sm-offset-1">
				<h2>Opponent:</h2>
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<input type="radio" name="opponent" value=1 checked>&nbsp;<label>Human<label>
					</div>
					<div class="col-md-3">
						<input type="radio" name="opponent" value=2>&nbsp;<label>Computer<label>
					</div>
				</div>
			</div>
		</div>
    	{% if not app.user.registered %}
    		{% set skillHidden = 'hidden' %}
    	{% else %}
    		{% set skillHidden = 'visible' %}
    	{% endif %}
		<div id="skillLevel" class="row {{ skillHidden }}">
			<div class="col-md-11 col-md-offset-1 col-sm-11 col-sm-offset-1">
				<h2>Skill Level:</h2>
				<div class="row">
					<div class="col-md-4 col-md-offset-1">
						<input type="radio" name="skill" value=1 checked>&nbsp;<label id="skill1">Best Match</label>
					</div>
					<div class="col-md-3">
						<input type="radio" name="skill" value=2>&nbsp;<label id="skill2">Lesser</label>
					</div>
					<div class="col-md-3">
						<input type="radio" name="skill" value=3>&nbsp;<label id="skill3">Greater</label>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-11 col-md-offset-1 col-sm-11 col-sm-offset-1">
				<h2>Time per player:</h2>
				<div class="row">
					<div class="col-md-11 col-md-offset-1">
						<input type="radio" name="duration" value=3>&nbsp;<label>3 minutes</label>
						<br>
						<input type="radio" name="duration" value=5>&nbsp;<label>5 minutes</label>
						<br>
						<input type="radio" name="duration" value=10 checked>&nbsp;<label>10 minutes</label>
						<br>
						<input type="radio" name="duration" value=20>&nbsp;<label>20 minutes</label>
						<br>
						<input type="radio" name="duration" value=30>&nbsp;<label>30 minutes</label>
					</div>
				</div>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
		    	<input type="submit" class="btn btn-large btn-primary" value="Find Match"/>
			</div>
		</div>
	</div>
</form>