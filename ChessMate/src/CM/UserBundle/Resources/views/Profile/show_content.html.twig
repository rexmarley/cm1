		    <div class="col-md-1 col-xs-1">
				<label>{{ 'profile.show.email'|trans }}:</label> 
			</div>
		    <div class="col-md-4">
				<input type="text" value="{{ user.email }}" disabled/>
			</div>
		</div>
		<br>
		<div class="row">
		    <div class="col-md-12">
	        	<center>
	        		<a class="btn btn-lg btn-success" href="{{ path('cm_start', {}) }}">Home</a>	        		
