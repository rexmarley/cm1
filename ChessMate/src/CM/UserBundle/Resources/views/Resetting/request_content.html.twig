{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
	<div id="reset" class="login">
		<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
	        {% if invalid_username is defined %}
	            <div class="errors"><center>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</center></div>
	        {% endif %}
	        <div class="row">
			    <div class="col-md-12">
			    	<center><label><u>Request Password Reset</u></label></center>
				</div>
			</div>
	        <div class="row">
			    <div class="col-md-12">
			    	<label for="username">{{ 'resetting.request.username'|trans }}</label>
			    	<input type="text" id="username" name="username" required="required" />
			        <input type="submit" class="btn btn-lg btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
				</div>
			</div>
		</form>
	</div>
</div>
